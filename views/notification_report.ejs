<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">   
    <link rel="icon" type="image/png" href="img/icons/favicon-32x32.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <title>Notification Report</title>
</head>
<body>

    <div class="container">
        <h1>Notification Report </h1>
        <a class="btn btn-primary" style="justify-content: right;text-align: right;" href="/">Add Articles</a>

        <table class="table table-striped">
            <thead>
                <th>Sr No</th>
                <th>Articles Title</th>
                <th>Success Count</th>
                <th>Failure Count</th>
                <th>Invalid Registration</th>
                <th>Not Registered</th>
                <th>View Reports</th>

            </thead>
            <tbody>
                <% notification_report.forEach(function(element,i){ %>
                <tr>
                  <td><%= i %></td>
                  <td><%= element['article_title'] %></td>
                  <td><%= element['success_count'] %></td>
                  <td><%= element['failure_count'] %></td>
                  <td><%= element['invalid_registration'] %></td>
                  <td><%= element['not_registered'] %></td>
                  <td><a href="/notification_report/stats/<%=element['article_id']%>" class="btn btn-info">View Report</a></td>
                </tr>
                <% }); %>

            </tbody>
        </table>
    </div>
</body>
</html>