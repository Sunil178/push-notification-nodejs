<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Article</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>

</head>

<body>
    <h1>Display Articles</h1>
    <table border="2">
        <thead>
            <th>Articles</th>
            <th>Notify</th>

        </thead>
        <tbody>
            <% articles.forEach(function(check){ %>

            <tr>
                <td class="art" id="node_send"><%= check.articlebody %></td>
                <!-- <td><a><button>Edit</button></a></td> -->
                <!-- <td><a><button>View</button></a></td> -->
                <!-- <td><a><button>Delete</button></a></td> -->
                <td><a href=""><button class="btn pqr"  value="<%= check.articlebody %>">Notify</button></a></td>
            </tr>
            <% }); %>
        </tbody>

    </table>
    <ul>

    </ul>
    <script type="text/javascript">
        $('.pqr').on('click', (e)=> {
            // alert($(e.currentTarget).val());
            var data=$(e.currentTarget).val();
            e.preventDefault();
            swal({
                title: "Are you sure?",
                text: "You Article will get published!",
                type: 'success',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Confirm!',
                closeOnConfirm: false,
                closeOnCancel: false
            }).then((e) => {
                if (e['value']) {
                    $.ajax({
                        type: "POST",
                        url: '/pushnotication/',
                        data: {
                            data:data
                        },
                        success: '',
                        dataType: '',
                    });
                } else {
                    alert("The alert was dismissed by the user: ");
                }
            }).catch(function (reason) {
                alert("The alert was dismissed by the user: " + reason);
            });

        });
    </script>
</body>

</html>