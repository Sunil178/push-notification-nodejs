<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Article</title>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/7.11.0/sweetalert2.all.min.js"></script>
</head>

<body>
    <div class="container">
        <h1>Articles Display </h1>
        <a class="btn btn-primary" style="justify-content: right;text-align: right;" href="/">Add Articles</a>

        <table class="table table-striped">
            <thead>

                <th>Articles Title</th>
                <th>Articles Body</th>
                <th>Articles Image</th>
                <th>Articles Notification Text</th>
                <th>Articles Main Source</th>
                <th>Notify</th>

            </thead>

            <tbody>

                <% articles.forEach(function(check){ %>
                <tr>
                    <td><%= check.article_title %></td>
                    <td class="art" id="node_send"><%= check.articlebody %></td>
                    <td><img src="<%= check.article_img %>" height="100px" width="100px"></td>
                    <td class="art" id="node_send"><%= check.article_notification_text %></td>
                    <td class="art" id="node_send"><%= check.article_main_source %></td>
                    <input type="hidden" class="status" value="<%= check.status %>">
                    <!-- <td><a><button>Edit</button></a></td> -->
                    <!-- <td><a><button>View</button></a></td> -->
                    <!-- <td><a><button>Delete</button></a></td> -->
                    <td><a href=""><button class="btn btn-info pqr" value="<%= [check.id] %>">Notify</button></a></td>
                </tr>
                <% }); %>

            </tbody>
        </table>
    </div>
</body>

    <script type="text/javascript">
        $('.pqr').on('click', function(e) {
            e.preventDefault();
            if($(this).closest("tr").find(".status") .val()=='1'){
                var data = $(this).val();
                swal({
                    title: "Your Article is Already Published?Resend Notification?",
                    text: "You Article will get published!",
                    type: 'success',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Confirm!',
                }).then((e) => {
                    if (e['value']) {
                        $.ajax({
                            type: "POST",
                            url: '/pushnotication/',
                            data: {
                                data: data
                            },
                            success: '',
                            dataType: '',
                        });
                    } else {
                        //console.log(data.split(","))
                        //alert("The alert was dismissed by the user: ");
                    }
                }).catch(function (reason) {
                    alert("The alert was dismissed by the user: " + reason);
                });

            }
            else{
